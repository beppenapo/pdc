<div id="area_interesse_form">

  <input type="text" id="id_area" name="id_area" value="<?php echo($id_area); ?>"  class="form"/>

  <label>STATO</label>
  <select id="stato_update" name="stato_update" class="form">
       <option value="<?php echo($id_stato); ?>"><?php echo($statoai); ?></option>
       <?php
         $query =  ("SELECT * FROM public.stato where id != $id_stato order by stato asc; ");
         $result = pg_query($connection, $query);
         $righe = pg_num_rows($result);
         $i=0;
         for ($i = 0; $i < $righe; $i++){
           $idStato = pg_result($result, $i, "id");
           $def = pg_result($result, $i, "stato");
           echo "<option value=\"$idStato\">$def</option>";
         }
       ?>
  </select>
 
  <label>PROVINCIA</label>
  <select id="provincia_update" name="provincia_update" class="form">
       <option value="<?php echo($id_prov); ?>"><?php echo($provinciaai); ?></option>
       <?php
         $query =  ("SELECT * FROM public.provincia where id != $id_prov AND stato = $id_stato order by provincia asc; ");
         $result = pg_query($connection, $query);
         $righe = pg_num_rows($result);
         $i=0;
         for ($i = 0; $i < $righe; $i++){
           $idProv = pg_result($result, $i, "id");
           $def = pg_result($result, $i, "provincia");
           echo "<option value=\"$idProv\">$def</option>";
         }
       ?>
  </select>
 
 <label>COMUNE</label>
 <select id="comune_update" name="comune_update" class="form">
       <option value="<?php echo($id_com); ?>"><?php echo($comuneai); ?></option>
       <?php
         $query =  ("SELECT * FROM public.comune where id != $id_com and provincia = $id_prov and stato = $id_stato order by comune asc; ");
         $result = pg_query($connection, $query);
         $righe = pg_num_rows($result);
         $i=0;
         for ($i = 0; $i < $righe; $i++){
           $idCom = pg_result($result, $i, "id");
           $def = pg_result($result, $i, "comune");
           echo "<option value=\"$idCom\">$def</option>";
         }
       ?>
  </select>
 
 <label>LOCALITA'</label>
 <select id="localita_update" name="localita_update" class="form">
   <option value="<?php echo($id_loc); ?>"><?php echo($localitaai); ?></option>
       <?php
         $query =  ("SELECT localita.id AS id_localita, localita.comune AS id_comune, comune.comune, localita.localita
                     FROM public.localita, public.comune 
                     WHERE localita.comune = comune.id and localita.id != $id_loc and localita.comune = $id_com
                     order by localita asc;");
         $result = pg_query($connection, $query);
         $righe = pg_num_rows($result);
         $i=0;
         for ($i = 0; $i < $righe; $i++){
           $id_loc = pg_result($result, $i, "id_localita");
           $localita = pg_result($result, $i, "localita");
           echo "<option value=\"$id_loc\">$localita</option>";
         }
       ?>
  </select>
 </select>
 
 <label>INDIRIZZO</label>
  <select id="indirizzo_update" name="indirizzo_update" class="form">
   <option value="<?php echo($id_indirizzo); ?>"><?php echo($indirizzoai); ?></option>
       <?php
         $query =  ("SELECT indirizzo.id AS id_indirizzo, indirizzo.comune as id_comune, comune.comune, indirizzo.indirizzo
                     FROM public.comune,public.indirizzo
                     WHERE indirizzo.comune = comune.id and indirizzo.id != $id_indirizzo and comune = $id_com
                     order by indirizzo asc;");
         $result = pg_query($connection, $query);
         $righe = pg_num_rows($result);
         $i=0;
         for ($i = 0; $i < $righe; $i++){
           $id_indirizzo = pg_result($result, $i, "id_indirizzo");
           $indirizzo = pg_result($result, $i, "indirizzo");
           echo "<option value=\"$id_indirizzo\">$indirizzo</option>";
         }
       ?>
  </select>

 <label>MOTIVAZIONE AREA DI INTERESSE</label>
 <select id="motiv_update" name="motiv_update" class="form">
       <option value="<?php echo($id_motiv); ?>"><?php echo($motivai); ?></option>
       <?php
         $query =  ("SELECT * FROM lista_ai_motiv where id != $id_motiv order by definizione asc; ");
         $result = pg_query($connection, $query);
         $righe = pg_num_rows($result);
         $i=0;
         for ($i = 0; $i < $righe; $i++){
           $idMotivAi = pg_result($result, $i, "id");
           $def = pg_result($result, $i, "definizione");
           echo "<option value=\"$idMotivAi\">$def</option>";
         }
       ?>
  </select>
 
